# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# For local MongoDB (if using local installation)
# MONGODB_URI=mongodb://localhost:27017/chamavault

# For MongoDB Atlas (recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/chamavault?retryWrites=true&w=majority

# ===========================================
# JWT CONFIGURATION
# ===========================================

# Generate a strong secret key (change this!)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure

# ===========================================
# SMS LEOPARD CONFIGURATION
# ===========================================

# SMS Leopard API endpoint (usually stays the same)
SMSLEOPARD_API_URL=https://api.smsleopard.com/v1/sms

# Your SMS Leopard credentials
SMSLEOPARD_USERNAME=your_smsleopard_username
SMSLEOPARD_PASSWORD=your_smsleopard_password

# Your sender ID (what appears as sender in SMS)
SMSLEOPARD_SOURCE=CHAMA_APP

# ===========================================
# PAYSTACK CONFIGURATION
# ===========================================

# Test keys (for development)
PAYSTACK_SECRET_KEY=sk_test_your_test_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key_here

# Live keys (for production - uncomment when ready)
# PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key_here
# PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key_here

# Webhook secret for verifying Paystack webhooks
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# ===========================================
# OPENAI CONFIGURATION
# ===========================================

# Your OpenAI API key for AI features
OPENAI_API_KEY=sk-your_openai_api_key_here

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port for the backend server
PORT=5000

# Environment (development/production)
NODE_ENV=development

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT_REQUESTS=100

# OTP expiry time in minutes
OTP_EXPIRY_MINUTES=10

# Login OTP expiry time in minutes  
LOGIN_OTP_EXPIRY_MINUTES=5

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable SMS sending (useful for testing)
ENABLE_SMS=true

# Enable/disable AI features
ENABLE_AI=true

# AI trial period in days
AI_TRIAL_DAYS=14

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable console logging
ENABLE_CONSOLE_LOGS=true

# ===========================================
# CRON JOB SETTINGS
# ===========================================

# Timezone for scheduled tasks
TIMEZONE=Africa/Nairobi

# Enable automated reminders
ENABLE_REMINDERS=true

# Default contribution reminder days before due
DEFAULT_REMINDER_DAYS=3