# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API URL (adjust for your deployment)
# For local development
VITE_API_URL=http://localhost:5000

# For production (update with your actual domain)
# VITE_API_URL=https://api.yourdomain.com

# ===========================================
# PAYSTACK CONFIGURATION (Frontend)
# ===========================================

# Paystack public key (test key for development)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_test_public_key_here

# Live key for production (uncomment when ready)
# VITE_PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application name
VITE_APP_NAME=Chama Vault

# Application version
VITE_APP_VERSION=1.0.0

# Enable development mode features
VITE_DEV_MODE=true

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable specific features
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_SMS_FEATURES=true
VITE_ENABLE_PAYMENT_FEATURES=true

# ===========================================
# UI CONFIGURATION
# ===========================================

# Default language/locale
VITE_DEFAULT_LOCALE=en

# Currency symbol and format
VITE_CURRENCY_SYMBOL=KES
VITE_CURRENCY_CODE=KES

# Date format preference
VITE_DATE_FORMAT=DD/MM/YYYY

# ===========================================
# SUBSCRIPTION PLANS
# ===========================================

# Monthly subscription price (in cents/kobo)
VITE_MONTHLY_PRICE=10000

# Weekly subscription price (in cents/kobo)  
VITE_WEEKLY_PRICE=3000

# AI trial period in days
VITE_AI_TRIAL_DAYS=14

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics ID (if using GA)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (if using Sentry)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ===========================================
# CONTACT & SUPPORT
# ===========================================

# Support contact information
VITE_SUPPORT_EMAIL=support@chamavault.com
VITE_SUPPORT_PHONE=+254700000000

# Company information
VITE_COMPANY_NAME=Chama Vault Ltd
VITE_COMPANY_WEBSITE=https://chamavault.com